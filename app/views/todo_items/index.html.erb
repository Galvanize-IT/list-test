<h1><%= @todo_list.title %></h1>

<ul class="todo_items">
  <% @todo_list.todo_items.each do |todo_item| %>
    <li id="<%= dom_id(todo_item)%>"><%= todo_item.content %>
      <%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %>
      <%= link_to "Delete", "#delete-confirm", data: { link: todo_list_todo_item_path(todo_item) }, class: "delete-item" %>
    </li>
  <% end %>
</ul>

<p>
  <%= link_to "New Todo Item", new_todo_list_todo_item_path %>
</p>

<div id="delete-confirm" class="modalDialog">
  <div><a href="#close" title="Close" class="close">X</a>
    <h2>Are you sure you want to delete this item?</h2>
    <div class="modal-actions">
      <%= link_to "Yes, delete it!", "#delete_path", method: :delete, id: "delete-item-link"%>
      <%= button_tag "Cancel", class: "cancel" %>
    </div>
  </div>
</div>
